    <div class="container">
      <h1 class="display-3">Hello {{user.firstName}}! </h1>
      <p>Information:</p>
      <ul>
        <li> Username: {{user.username}} </li>      
        <li> First Name: {{user.firstName}} </li>   
        <li> Last Name: {{user.lastName}} </li>     
        <li>  email: {{user.email}}</li>              
        <li> Location: {{user.location}} </li>  
      </ul>
    
    </div>
  </div>

