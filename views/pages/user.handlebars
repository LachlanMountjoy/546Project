    {{#if items1}}
  
    <div class="row">
      {{#each items1}}
      <div class="col-md-4">
            <a href="/items/item/{{_id}}"><h3>{{itemName}}</h3></a>
            {{!-- <h3>{{itemName}}</h3> --}}
