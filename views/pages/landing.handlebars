

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-2"> For Sale </h1>
    </div>
  </div>

    <div class="container">
    <div class="row">
                {{#each items}}
      <div class="col-md-4">
  
    <h3>{{itemName}}</h3>
    {{#if image}}
    <img src={{image}} alt="item" style="width:100x;height:100px;">
    {{/if}}
    <p>{{description}} <br>
        Min bid of {{currentPrice}} 
            {{#if highestBidder}} 
                by {{highestBidder}} 
            {{/if}} <br>
        Posted at {{postedTime}}    
    </p>
    {{#each comments}}
        each of these lines represents a comment on the item <br>
    {{/each}}

      </div>
      {{/each}}
    </div>
        <hr>
  </div> <!-- /container -->


