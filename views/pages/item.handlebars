<!-- Content Row -->
<div class="row">
  <div class="bidItemDiv" id="bidItemDiv" hidden>
    <div class="card h-100">
      <div class="card-body">
        <h2 class="card-title">Bidder</h2>
        <p class="card-text">There are currently {{bidderCount}} people bidding on this product. The current highest bid
          price is ${{currentPrice}} called by {{currentBidder}}.</p>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <a class="btn btn-primary" id="bidLink" href="/bidItems/item/{{id}}" hidden>Bid</a>
  </div>
</div>
