<div class="container">
  <h1>I want to bid on this item!</h1>


  <form method="POST" action="/bidItems/item" id="addBidderForm">
    <input class="itemId" name="itemId" id="itemId" value="{{id}}" hidden />
    <div class="row">

      <div class="col-md-4">
        <label for="inputImage">
          {{!-- <input type="file" class="custom-file-input" name="inputImage" id="inputImage" style="display:none;" /> --}}
          <div id="thumbnailDiv">
            <img class="img-thumbnail hover-image" width="100%" height="250" src={{image}}>
          </div>
          {{!-- <div class="invalid-feedback">
              Uploaded file is not a valid image.
            </div> --}}
        </label>

      </div>


      <div class="col-md-8">

        <div class="form-group">
          <label for="bidItemName">Name</label>
          <p class="form-control" name="bidItemName" id="bidItemName">{{itemName}}</p>
        </div>

        <div class="form-group">
          <label for="originalPrice">Original Price</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <p class="form-control" name="originalPrice" id="originalPrice">{{price}}</p>
          </div>
        </div>

        <div class="form-group">
          <label for="currentPrice">Current highest Bid</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <p class="form-control" name="currentPrice" id="currentPrice" value="{{currentPrice}}">{{currentPrice}}</p>
          </div>
        </div>

        <div class="form-group">
          <label for="categories">Categories</label>
          <p class="form-control" name="categories" id="categories">{{categories}}</p>
        </div>

      </div>
    </div>

    <div class="form-group">
          <label for="descriptions">Descriptions</label>
          <p class="form-control" name="descriptions" id="descriptions">{{description}}</p>
        </div>

    <div class="form-group">
      <label for="bidOnPrice">Please show your bid</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" name="bidOnPrice" id="bidOnPrice" placeholder="Please show your bid" required>
        <div class="invalid-feedback">
          Price must be a positive number.
        </div>
      </div>
    </div>

    <button type="button" class="btn btn-secondary">Cancel</button>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
