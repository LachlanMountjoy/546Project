  <div class="container">
    <h1>Add a new item</h1>


    <form method="POST" action="item" id="itemForm" enctype="multipart/form-data">
      <div class="row">

        <div class="col-md-4">
          <label for="inputImage">
            <input type="file" class="custom-file-input" name="inputImage" id="inputImage" style="display:none;" />
            <div id="thumbnailDiv">
              <img class="img-thumbnail hover-image" width="100%" height="250" alt="image"
                src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png">
              <div class="hover-middle hover-text">
                Click here to upload an image
              </div>
            </div>
            <div class="invalid-feedback">
              Uploaded file is not a valid image.
            </div>
          </label>

        </div>


        <div class="col-md-8">

          <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" class="form-control" name="inputName" id="inputName" placeholder="Name" required>
          </div>

          <div class="form-group">
            <label for="inputPrice">Price</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
              <input type="text" class="form-control" name="inputPrice" id="inputPrice" placeholder="Price" required>
              <div class="invalid-feedback">
                Price must be a positive number.
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="inputSellType">Type</label>
            <select class="form-control" name="inputSellType" id="inputSellType">
              <option value="sell">Sell</option>
              <option value="auction">Auction</option>
            </select>
          </div>

          <div class="form-group invisible" id="inputAuctionExpirationDiv">
            <label for="inputAuctionExpiration">Auction Expires</label>
            <select class="form-control" name="inputAuctionExpiration" id="inputAuctionExpiration">
              <option value="1">1 day</option>
              <option value="7">7 days</option>
              <option value="14">14 days</option>
            </select>
          </div>
        </div>
      </div>


      <div class="form-row mb-3">
        <label for="inputCategories">Categories</label>
        <small class="form-text text-muted">&nbsp;&nbsp;&nbsp;&nbsp;Add all relevant categories below, separated by
          commas</small>
        <input type="text" class="form-control wrapper" name="inputCategories" id="inputCategories" placeholder="Categories" required>
      </div>

      <div class="form-row mb-3">
        <label for="inputDescriptions">Descriptions</label>
        <textarea class="form-control" name="inputDescriptions" id="inputDescriptions" rows="3" required></textarea>
      </div>

      <button type="button" class="btn btn-secondary">Cancel</button>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
